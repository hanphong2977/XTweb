@{
    Layout = "";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" href="img/icon.png" />
    <title>Xuân Tâm</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
          rel="stylesheet"
          integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
          crossorigin="anonymous" />
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
    <link rel="stylesheet" href="~/css/dangky.css">
</head>
<body>
    <section class="register-area">
        <div class="container">
            <div class="form-box">
                <form action="" name="Formfill">
                    <h2>Đăng Ký</h2>
                    <div class="input-box">
                        <i class='bx bx-user'></i>
                        <input type="text" name="hoten" placeholder="Họ Tên">
                    </div>
                    <div class="input-box">
                        <i class='bx bx-phone'></i>
                        <input type="tel" name="sodienthoai" placeholder="Số Điện Thoại">
                    </div>
                    <div class="input-box">
                        <i class='bx bx-lock-alt'></i>
                        <input type="password" name="matkhau" placeholder="Mật Khẩu">
                    </div>
                    <div class="input-box">
                        <i class='bx bx-lock-alt'></i>
                        <input type="password" name="nhaplaimatkhau" placeholder="Nhập Lại Mật Khẩu">
                    </div>
                    <div class="button">
                        <input type="submit" class="btn" value="Đăng Ký">
                    </div>
                    <div class="group">
                        <span><a aria-current="page" asp-controller="User" asp-action="quenmatkhau">Quên Mật Khẩu</a></span>
                        <span><a aria-current="page" asp-controller="User" asp-action="dangnhap">Đăng Nhập</a></span>
                    </div>
                </form>
            </div>
        </div>
    </section>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
            crossorigin="anonymous"></script>
</body>
</html>