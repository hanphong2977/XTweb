<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" href="..\image\logo.png" />
    <title>Xuân Tâm Barber</title>
    <link rel="stylesheet" href="~/css/styles.css" />
    <link rel='stylesheet' href='https://cdn-uicons.flaticon.com/2.2.0/uicons-regular-rounded/css/uicons-regular-rounded.css'>
    <link rel='stylesheet' href='https://cdn-uicons.flaticon.com/2.2.0/uicons-solid-rounded/css/uicons-solid-rounded.css'>
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

    <script src="~/lib/tinymce/tinymce.min.js" referrerpolicy="origin"></script>

    <script>tinymce.init({ selector: 'textarea' });</script>
</head>
<body class="Admin-area">
    <nav class="slidebar close ">
        <header>
            <div class="image-text">
                <span class="image">
                    <img src="~/image/XTbb.png" alt="">
                </span>
            </div>
            <i class='toogle'></i>
            <hr style="margin:0;margin-left:40px" />
            <div class="Menu-Bar">
                <div class="menu">
                    <ul>
                        <li class="nav-link">
                            <a aria-current="page" asp-controller="Admin" asp-action="Index">
                                <i class='bx bx-group icon'></i>
                                <span class="text"> Nhân viên</span>
                            </a>
                        </li>
                        <li>
                            <a aria-current="page" asp-controller="Admin" asp-action="khachhang">
                                <i class='bx bxs-face icon'></i>
                                <span  class="text"> Khách hàng</span>
                            </a>
                        </li>
                        <li>
                            <a aria-current="page" asp-controller="Admin" asp-action="dichvu">
                                <i class='bx bxs-widget icon'></i>
                                <span class="text"> Dịch vụ</span>
                            </a>
                        </li>
                        <li>
                            <a aria-current="page" asp-controller="Admin" asp-action="sanpham">
                                <i class='bx bx-shopping-bag icon'></i>
                                <span class="text"> Sản phẩm</span>
                            </a>
                        </li>
                        <li>
                            <a aria-current="page" asp-controller="Admin" asp-action="lichhen">
                                <i class='bx bxs-calendar icon'></i>
                                <span class="text"> Lịch hẹn</span>
                            </a>
                        </li>
                        <li>
                            <a aria-current="page" asp-controller="Admin" asp-action="hoadon">
                                <i class='bx bxs-badge-dollar icon'></i>
                                <span class="text"> Hóa đơn</span>
                            </a>
                        </li>
                        <li>
                            <a  asp-action="dangxuat" asp-controller="admin">
                                <i style="margin-left:4px;" class='bx bx-log-out icon'></i>
                                <span class="text"> Đăng xuất   </span>
                            </a>
                        </li>
                        <li>
                            <partial name="_LoginPartial_Admin"/>
                        </li>
                    </ul>
                </div>
            </div>
        </header>

    </nav>
    <div class="admin_nav close ">
        @RenderBody()
    </div>
   
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script src="~/js/site.js"></script>
</body>
</html>