@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
@model IEnumerable<XTweb.Models.NhanVien>

<h2 style="max-width:1330px; font-size: 50px; background-color:blanchedalmond;margin:0;padding-bottom:10px;padding-left:5px;position: fixed;">
    Nhân Viên
    <a style="text-decoration:none;margin-left:20px;" asp-controller="Admin" asp-action="AddNhanVien">
        <i style="color: black; font-size:40px;" class='bx bxs-add-to-queue'></i>
    </a>
</h2>


<table class="content-table" style="margin: 0 auto;margin-top:80px;">
    <thead>
        <tr>
            <th>Tên Nhân Viên</th>
            <th>Email</th>
            <th>SĐT</th>
            <th>Địa Chỉ</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.TenNhanVien</td>
                <td>@item.Email</td>
                <td>@item.Sdt</td>
                <td>@item.DiaChi</td>
                <td style="text-align: center">
                    <a class="btn-table" asp-action="DisplayNhanVien" asp-controller="Admin" asp-route-id="@item.MaNhanVien">Xem</a>
                    <a class="btn-table" asp-action="UpdateNhanVien" asp-controller="Admin" asp-route-id="@item.MaNhanVien">Sửa</a>
                    <a class="btn-table" asp-action="DeleteNhanVien" asp-controller="Admin" asp-route-id="@item.MaNhanVien">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>