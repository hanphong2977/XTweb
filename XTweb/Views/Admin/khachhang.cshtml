@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
@model IEnumerable<XTweb.Models.KhachHang>
<h2 style="max-width:1330px; font-size: 50px; background-color:blanchedalmond;margin:0;padding-bottom:10px;padding-left:5px;position: fixed;">
    Khách Hàng
    <a style="text-decoration:none;margin-left:20px;" asp-controller="Admin" asp-action="AddKhachHang">
        <i style="color: black; font-size:40px;" class='bx bxs-add-to-queue'></i>
    </a>
</h2>
<hr style="margin-top:0;" />
<table class="content-table" style="margin: 0 auto;margin-top:80px;">
    <thead>
        <tr>
            <th>Tên Khách Hàng</th>
            <th>SĐT</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.HoTen</td>
                <td>@item.Sdt</td>
                <td style="text-align: center">
                    <a class="btn-table" asp-action="DisplayKhachHang" asp-controller="Admin" asp-route-id="@item.MaKhachHang">Xem</a>
                    <a class="btn-table" asp-action="UpdateKhachHang" asp-controller="Admin" asp-route-id="@item.MaKhachHang">Sửa</a>
                    <a class="btn-table" asp-action="DeleteKhachHang" asp-controller="Admin" asp-route-id="@item.MaKhachHang">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>