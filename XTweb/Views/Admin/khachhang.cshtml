@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
@model IEnumerable<XTweb.Models.KhachHang>
<h2 style="font-size: 50px; background-color:blanchedalmond;margin:0;padding-bottom:10px;padding-left:5px;">Khách Hàng</h2>
<hr style="margin-top:0;" />
<table class="content-table" style="margin: 0 auto">
    <thead>
        <tr>
            <th>Tên Khách Hàng</th>
            <th>SĐT</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.HoTen</td>
                <td>@item.Sdt</td>
                <td style="text-align: center">
                    <a class="btn-table" href="../html/xem.html">Xem</a>
                    <a class="btn-table" href="../html/sua.html">Sửa</a>
                    <a class="btn-table" href="">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>