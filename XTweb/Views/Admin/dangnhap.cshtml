
@model XTweb.Models.Admin_LoginModel
@{
    Layout = null;
  
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" href="img/icon.png" />
    <title>Xuân Tâm</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
          rel="stylesheet"
          integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
          crossorigin="anonymous" />
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
    <link rel="stylesheet" href="~/css/dangnhap_admin.css">
</head>
<body>

    <section class="login-area">
        <div class="wrapeer">
            <form asp-action="dangnhap" asp-controller="Admin" method="post">
                <h2>Đăng Nhập</h2>
              
                <div class="input-box">
                    <input asp-for="sdt" type="tel" placeholder="SDT" required>
                    <i class='bx bx-phone'></i>
                </div>
                <div class="input-box">
                    <input asp-for="password" type="password" placeholder="Password" required>
                    <i class='bx bx-lock-alt'></i>
                </div>
                <div class="remenber-forgot">
                    <label class="remenber-forgot-label"><input type="checkbox">Lưu Mật Khẩu</label>
                </div>
                <button type="submit" class="btn">Đăng Nhập</button>             
            </form>
        </div>
    </section>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
            crossorigin="anonymous"></script>
</body>
</html>