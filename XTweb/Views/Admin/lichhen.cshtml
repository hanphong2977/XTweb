@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
@model IEnumerable<XTweb.Models.LichHen>

<h2 style="max-width:1330px; font-size: 50px; background-color:blanchedalmond;margin:0;padding-bottom:10px;padding-left:5px;position: fixed;">
    Lịch Hẹn
</h2>

<hr style="margin-top:0;" />
<table class="content-table" style="margin: 0 auto;margin-top:80px;">
    <thead>
        <tr>
            <th>Tên Khách Hàng</th>
            <th>SĐT</th>
            <th>Ngày Hẹn</th>
            <th>Dịch Vụ</th>
            <th>Barber</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
            <tr>
                <td>@item.MaKhachHangNavigation.HoTen</td>
                <td>@item.MaKhachHangNavigation.Sdt</td>
                <td>@item.NgayHen</td>
                <td>@item.MaDichVuNavigation.TenDichVu</td>
                <td>@item.MaNhanVienNavigation.TenNhanVien</td>
                <td style="text-align: center">
                    <a class="btn-table" asp-action="DisplayLichHen" asp-controller="Admin" asp-route-id="@item.MaLichHen">Xem</a>
                </td>
            </tr>
        }        
    </tbody>
</table>