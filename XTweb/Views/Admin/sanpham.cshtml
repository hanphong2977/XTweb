@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
@model IEnumerable<XTweb.Models.SanPham>
<h2 style="max-width:1330px; font-size: 50px; background-color:blanchedalmond;margin:0;padding-bottom:10px;padding-left:5px;position: fixed;">
    Sản Phẩm
    <a style="text-decoration:none;margin-left:20px;" asp-controller="Admin" asp-action="AddSanPham">
        <i style="color: black; font-size:40px;" class='bx bxs-add-to-queue'></i>
    </a>
</h2>
<table class="content-table" style="margin: 0 auto;margin-top:80px;">
    <thead>
        <tr>
            <th>Tên Sản Phẩm</th>
            <th>Mô Tả</th>
            <th>Giá</th>
            <th>Số Lượng</th>
            <th>Loại Sản Phẩm</th>
            <th>Hình Ảnh</th>  
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td style="width:200px;" >@item.TenSanPham</td>
                <td style="width:300px;" >@item.MoTaSanPham</td>
                <td>@item.Gia</td>
                <td style="text-align:center;">@item.SoLuong</td>
                <td>@item.MaDanhMucNavigation?.TenDanhMuc</td>
                <td> <img src="@item.HinhAnh" alt="Product Image" style="width: 170px;height: 175px;" /></td>
                <td style="text-align: center; width:300px">
                    <a class="btn-table" asp-action="DisplaySanPham" asp-controller="Admin" asp-route-id="@item.MaSanPham">Xem</a>
                    <a class="btn-table" asp-action="UpdateSanPham" asp-controller="Admin" asp-route-id="@item.MaSanPham">Sửa</a>
                    <a class="btn-table" asp-action="DeleteSanPham" asp-controller="Admin" asp-route-id="@item.MaSanPham">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>