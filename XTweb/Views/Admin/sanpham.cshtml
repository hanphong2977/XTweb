@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
@model IEnumerable<XTweb.Models.SanPham>
<h2 style="font-size: 50px; background-color:blanchedalmond;margin:0;padding-bottom:10px;padding-left:5px;">Sản Phẩm</h2>
<table class="content-table">
    <thead>
        <tr>
            <th>Tên Sản Phẩm</th>
            <th>Mô Tả</th>
            <th>Giá</th>
            <th>Số Lượng</th>
            <th>Loại Sản Phẩm</th>
            <th>Hình Ảnh</th>  
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td style="width:200px;" >@item.TenSanPham</td>
                <td style="width:300px;" >@item.MoTaSanPham</td>
                <td>@item.Gia</td>
                <td style="text-align:center;">@item.SoLuong</td>
                <td>@item.MaDanhMucNavigation?.TenDanhMuc</td>
                <td> <img src="@item.HinhAnh" alt="Product Image" style="width: 170px;height: 175px;" /></td>
                <td style="text-align: center; width:300px">
                    <a class="btn-table" href="../html/xem.html">Xem</a>
                    <a class="btn-table" href="../html/sua.html">Sửa</a>
                    <a class="btn-table" href="">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>