@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
@model IEnumerable<XTweb.Models.DichVu>
<h2 style="max-width:1330px; font-size: 50px; background-color:blanchedalmond;margin:0;padding-bottom:10px;padding-left:5px;position: fixed;">
    Dịch Vụ
    <a style="text-decoration:none;margin-left:20px;" asp-controller="Admin" asp-action="AddDichVu">
        <i style="color: black; font-size:40px;" class='bx bxs-add-to-queue'></i>
    </a>
</h2>
<hr style="margin-top:0;" />

<table class="content-table" style="margin: 0 auto">
    <thead>
        <tr>
            <th>Tên Dich Vụ</th>
            <th>Giá</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.TenDichVu</td>
                <td>@item.Gia</td>
                <td style="text-align: center">
                    <a class="btn-table" asp-action="DisplayDichVu" asp-controller="Admin" asp-route-id="@item.MaDichVu">Xem</a>
                    <a class="btn-table" asp-action="UpdateDichVu" asp-controller="Admin" asp-route-id="@item.MaDichVu">Sửa</a>
                    <a class="btn-table" asp-action="DeleteDichVu" asp-controller="Admin" asp-route-id="@item.MaDichVu">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>