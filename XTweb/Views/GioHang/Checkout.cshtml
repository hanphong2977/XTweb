    <link rel="stylesheet" href="~/css/dangnhap_admin.css">
</head>
<body>
    <section class="login-area" style="padding-top: 70px">
        <div class="wrapeer">
            <h2>Checkout</h2>
            <form asp-action="Checkout" method="post">
                <div class="form-group">
                    <label asp-for="DiaChiGiaoHang">Shipping Address</label>
                    <input asp-for="DiaChiGiaoHang" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="LuuY">Notes</label>
                    <textarea asp-for="LuuY" class="form-control"></textarea>
                </div>
                <button type="submit" class="btn btn-primary">Place Order</button>
            </form>
        </div>

    </section>

</body>
</html>
