@model ShoppingCart
@{
    decimal total = 0;
}
<div class="container mt-5 mb-5" style=" display: grid;
    grid-template-columns: 70% 30%;">
    <h2>Your Shopping Cart</h2>
    <div class="cart-chitietsanpham" style="grid-column: 1;">
        <a tyle="text-decoration:none;" asp-controller="GioHang" asp-action="ClearCart">
            <button class="checkout">Xóa Tất Cả</button>
        </a>
        @foreach (var item in Model.Items)
        {
            <div class="product-chitietsanpham">
                <img src="@item.ImageUrl" alt="Product 1" style="width: 170px;height: 175px;">
                <div class="details-chitietsanpham">
                    <h2>@item.Name</h2>
                    <p>@item.Price.ToString("#,##0") Vnđ</p>
                    <div class="quantity-chitietsanpham">
                        <button class="btn-minus" onclick="decrement()">-</button>
                        <input style=" width: 60px; text-align: center; margin:0;" type="number" id="quantity" value="@item.Quantity">
                        <button class="btn-plus" onclick="increment()">+</button>
                    </div>
                    <div style="margin-top:30px;">
                        <a style="text-decoration: none; color:white" asp-action="RemoveFromCart" asp-route-productId="@item.ProductId" class="remove"><i class="fi fi-rs-trash"></i></a>
                    </div>
                </div>
            </div>
        }
    </div>
    <div class="total-chitietsanpham" style="grid-column: 2;">
        @foreach (var item in Model.Items)
        {
            total = total + (Convert.ToDecimal(item.Price) * item.Quantity);
        }
        <p>Total: <span id="total-amount">@total</span></p>
        <a style="text-decoration:none;" asp-controller="GioHang" asp-action="Checkout">
            <button class="checkout">Thanh Toán</button>
        </a>


    </div>
</div>
