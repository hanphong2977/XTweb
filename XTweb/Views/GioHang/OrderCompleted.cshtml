
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model XTweb.Models.HoaDonSanPham
<section>
    <div class="container" style="margin-bottom:200px">
        <div class="bill-box">
            <div class="bill-content">
                <div class="view_content">
                    <img class="mt-5"src="~/image/checked.png" alt="">
                    <h2>Đặt hàng thành công</h2>
                    <div class="detail_payment">
                        <div class="text-bold">
                            <h3> Phương thức thanh toán</h3>
                            <h3> Tên khách hàng</h3>
                            <h3> Số tiền thanh toán</h3>
                            <h3> Địa chỉ giao hàng</h3>
                            <h3> Lưu ý</h3>
                        </div>
                        <div class="text-nonebold">
                            @if (Model != null)
                            {
                                    <h3 style="margin-top:42px;margin-right:20px"> Thanh toán Sau </h3>
                                    //<h3 style="margin-top:42px;margin-right:20px"> @Model.</h3>
                                    <h3 style="margin-top:42px;margin-right:20px"> @ViewBag.TenKhachHang</h3>
                                    <h3 style="margin-top:42px;margin-right:20px"> @Model.TongTien</h3>
                                     <h3 style="margin-top:42px;margin-right:20px"> @Model.DiaChiGiaoHang</h3>
                                     <h3 style="margin-top:42px;margin-right:20px"> @Model.LuuY</h3>
                            }
                            else
                            {
                                <div>Không có dữ liệu thanh toán</div>
                            }
                        </div>
                    </div>
                    <div class="btndisplay">
                        <button style=" border-radius: 20px;
                                        width: 400px;
                                        height: 35px;
                                        background-color: #222222;
                                        font-weight: bold;
                                        font-size: 20px;">
                            <a style="text-decoration: none;color: #d7cccc;"
                               asp-controller="User" asp-action="Index">Trang chủ</a>
                        </button>
                    </div>
                </div>
                <div class="gif-image">
                    <img src="~/image/image_processing20190812-2176-vehbsi.gif">
                </div>
            </div>
        </div>
    </div>
</section>

